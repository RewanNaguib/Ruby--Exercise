<h1>Listing Articles</h1>
Our blog has <%= Article.public_count %> articles and counting!
<%= link_to "New Article", new_article_path %>
<table>
<tr>
<th>Title</th>
<th>Text</th>
<th>Actions</th>
</tr>

  <% @articles.each do |article| %>

    <tr>
     <td> <%= article.title %> </td>
     <td> <%= article.text%> </td>
     
     <td> <%= link_to 'Show' , article_path(article) %> </td>

      <td><% if can? :Edit, article %> <%= link_to 'Edit', edit_article_path(article) %><% end %></td>
      <td><% if can? :Destroy, article %> <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure you want to delete this record?' } %><% end %></td>

    </tr>
  <% end %>
</table>


